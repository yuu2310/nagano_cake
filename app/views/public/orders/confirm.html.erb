<%= render 'public/nav' %>

  <div "container">
    <div class='row mb-3'>
      <div class='col-8 offset-1'>
        <h4 class="pt-3">注文情報確認</h4>
      </div>
    </div>
    <div class='row'>
      <div class='col-7 offset-1'>
        <table class='table table-bordered border-dark' >
  
              <tr class="table-secondary">
                <th class="col-xs-3">商品名</th>
                <th class="col-xs-2">単価(税込)</th>
                <th class="col-xs-1">数量</th>
                <th class="col-xs-1">小計</th>
              </tr>
            
              <% @cart_items.each do |cart_item| %>
               
                  <tr>
                    
                    <td>
                      <%= image_tag cart_item.item.get_image("100x100") %><%= cart_item.item.name %>
                    </td>
                    
                    <td>
                      ¥ <%= cart_item.item.with_tax_price.to_s(:delimited) %>
                    </td>
                    
                    
                    <td>
                      <%= cart_item.amount %>
                    </td>
                   
                    
                    <td>
                      ¥ <%= cart_item.subtotal.to_s(:delimited) %>
                    </td>
                    
                     <% @total += cart_item.subtotal %>
                     
                  </tr>
                
              <% end %>
              
        </table>
      </div>  
      <div class='col-3'>
        <table class="table table-bordered border-dark">
          <tr>
            <th class="table-secondary">送料</th>
            <td class="text-right col-xs-5">
              ¥ <%= @shipping_cost %>
            </td>
          </tr>
          <tr>
            <th class="table-secondary">商品合計</th>
            <td class="text-right">
              ¥ <%=  @total.to_s(:delimited) %>
            </td>
          </tr>
          <tr>
            <th class="table-secondary">請求金額</th>
            <td class="text-right">
              ¥ <%= (@total + @shipping_cost).to_s(:delimited) %>
            </td>
          </tr>
        </table>
      </div>
    </div>
    <div class="row">
        <div class='col-11 offset-1'>
            <table class="table table-borderless">
              
                <tr>
                  <th class="col-1">支払い方法</th> 
                  <td><%= @order.payment_method_i18n %></td>
                </tr>
                
                <tr>
                  <th class="col-1">お届け先</th>
                  <td class="col-10">
                    〒 <%= @order.postal_code %>
                    <%= @order.address %>
                    <%= @order.name %>
                  </td>
                </tr>
                
            </table>
        </div>
    </div>
      
   
     
    <div class="row justify-content-center">
      
       <%= form_with model: @order, url: orders_path, method: :post, local: true do |f| %>
       
         <%= f.hidden_field :customer_id, value: current_customer %>
         <%= f.hidden_field :postal_code, value: @order.postal_code %>
         <%= f.hidden_field :address, value: @order.address %>
         <%= f.hidden_field :name, value: @order.name %>
         <%= f.hidden_field :shipping_cost, value: @shipping_cost %>
         <%= f.hidden_field :total_payment, value: @total + @shipping_cost %>
         <%= f.hidden_field :payment_method %>
         <%= f.hidden_field :status, value: "payment_waiting" %>
         <%= f.submit "注文を確定する", class: 'btn btn-success' %>
       
       <% end %>
    </div>
  </div>
