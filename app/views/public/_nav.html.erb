              <li class="mr-3">
                <button class="btn btn-outline-secondary" type="button"><%= link_to 'ログイン', new_customer_session_path, class: 'nav-link text-dark'  %></button>
              </li>
              
              <li class="mr-3">
                <button class="btn btn-outline-secondary" type="button"><%= link_to  '管理者側ログインへ', new_admin_session_path, class: 'nav-link text-dark'  %></button>
              </li>
              
          </ul>
          
            <% end %>
   
    <div>
  </nav>
</header>