<%= render 'public/nav' %>
<h1>会員情報編集</h1>
<%= form_with model: @customer, method: :patch do |customer| %>

<h5>氏名</h5>
<%= customer.text_field :first_name %>
<%= customer.text_field :last_name %>

<h5>フリガナ</h5>
<%= customer.text_field :first_name_kana %>
<%= customer.text_field :last_name_kana %>


<h5>郵便番号</h5>
<%= customer.text_field :postal_code, maxlength: "7" %>


<h5>住所</h5>
<%= customer.text_field :address, size: '50' %>


<h5>電話番号</h5>
<%= customer.text_field :telephone_number %>

<h5>メールアドレス</h5>
<%= customer.text_field :email %>

<%= customer.submit '編集内容を保存' %>

<%= link_to '退会する',cuntomers_unsubscribe_path %>

<% end %>
