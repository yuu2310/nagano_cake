<%= render 'public/nav' %>
<main>
  <div class="container">
    <div class="row">
      <div class="col-3 mt-5 bg-light text-center">
        <h2>会員情報編集</h2>
      </div>
    </div>
    <div class="text-center">
      <% if @customer.errors.any? %>
        <h5 class="text-danger">
          ※<%= @customer.errors.count %>件のエラーが発生しました
        </h5>
        <ul class="text-danger list-unstyled">
          <% @customer.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
                    
    <%= form_with model: @customer, method: :patch do |customer| %>
                      
    <div class="row"></div>
      <div class="col-xs-12">
                            
        <div class="col-xs-12 mt-4">
          <%= customer.label :"氏名", class: "col-sm-3 control-label", style: "margin: 10px;" %>
          <%= customer.text_field :first_name, class: "col-sm-3", style: "margin: 10px;" %>
          <%= customer.text_field :last_name, class: "col-sm-3", style: "margin: 10px;" %>
        </div>
        
        <div class="col-xs-12 mt-4">
          <%= customer.label :"フリガナ", class: "col-sm-3 control-label", style: "margin: 10px;" %>
          <%= customer.text_field :first_name_kana, class: "col-sm-3", style: "margin: 10px;" %>
          <%= customer.text_field :last_name_kana, class: "col-sm-3 form-control-static name", style: "margin: 10px;" %>
        </div>
        
        <div class="col-xs-12 mt-4">
          <%= customer.label :"郵便番号", class: "col-sm-3 control-label", style: "margin: 10px;" %>
          <%= customer.text_field :postal_code, autofocus: true, autocomplete: "email", maxlength: "7", class: "col-sm-2 form-control-static", style: "margin: 10px;" %>
        </div>
        
        <div class="col-xs-12 mt-4">
          <%= customer.label :"住所", class: "col-sm-3 control-label", style: "margin: 10px;" %>
          <%= customer.text_field :address, size: '50', class: "col-sm-5 form-control-static", style: "margin: 10px;" %>
        </div>
        
        <div class="col-xs-12 mt-4">
          <%= customer.label :"電話番号", class: "col-sm-3 control-label", style: "margin: 10px;" %>
          <%= customer.text_field :telephone_number, class: "col-sm-4 form-control-static", style: "margin: 10px;" %>
        </div>
        
        <div class="col-xs-12 mt-4">
          <%= customer.label :"メールアドレス", class: "col-sm-3 control-label", style: "margin: 10px;" %>
          <%= customer.text_field :email, class: "col-sm-4 form-control-static", style: "margin: 10px;" %>
        </div>
                      
        <div class="actions col-xs-10 col-xs-offset-2 mt-4">
        <p class="text-center">
          <%= customer.submit '編集内容を保存', class: "btn btn-primary col-sm-3", style: "margin: 10px;" %>
          <%= link_to '退会する',cuntomers_unsubscribe_path, class: "glyphicon glyphicon-tint btn btn-danger col-sm-3", style: "margin: 10px;" %>
        </p>
        </div>
    <% end %>
      </div>
    </div>                          
  </div>
</main>
