<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    
  </head>

  <body>
    <header>
      <div class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <%= link_to "Logo" %>
          <!--class: "navbar-brand" -->
            <% if admin_signed_in? %>
            
            <div class="navbar-collapse collapse" id="navbarNavDropdown" style>
              <ul class="navbar-nav ml-auto">
                
                <li>
                  <%= link_to admin_items_path, class: "nav-link text-light" do %>
                  <i class="fas fa-home"></i> 商品一覧
                  <% end %>
                </li>
                
                
                <li>
                  <%= link_to admin_customers_path, class: "nav-link text-light" do %>
                  <i class="fas fa-home"></i> 会員一覧
                  <% end %>
                </li>
                
                <li>
                  <%= link_to  class: "nav-link text-light" do %>
                    <i class="fas fa-users"></i> 注文履歴一覧
                  <% end %>
                  
                </li>
                
                <li>
                  <%= link_to admin_genres_path, class: "nav-link text-light"  do %>
                    <i class="fas fa-book-open"></i> ジャンル一覧
                  <% end %>
                </li>
                
                <!--<li>-->
                <!--  <%#= link_to destroy_admin_session_path, method: :delete, class: "nav-link text-light" do %>-->
                <!--    <i class="fas fa-sign-out-alt"></i> ログアウト-->
                <!--  <%# end %>-->
                <!--</li>-->
                
                <li>
                <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
                </li>
                
              </ul>
            </div>
        </div>
      </div>
     <% else %>
     <div class="navbar navbar-expand-lg navbar-dark bg-dark">
       <div class="container">
         <div class="navbar-collapse collapse" id="navbarNavDropdown" style>
           <ul class="navbar-nav ml-auto">
             
              <li>
                <%= link_to class: "nav-link text-light" do %>
                  <i class="fas fa-home"></i> About
                <% end %>
              </li>
              
              <li>
                <%= link_to admin_items_path, class: "nav-link text-light" do %>
                  <i class="fas fa-link"></i> 商品一覧
                <% end %>
              </li>
              
              <li>
                <%= link_to new_admin_session_path, class: "nav-link text-light" do %>
                  <i class="fas fa-user-plus"></i> 新規登録
                <% end %>
              </li>
              
              <li>
                <%= link_to admin_session_path, class: "nav-link text-light" do %>
                  <i class="fas fa-sign-in-alt"></i> ログイン
                <% end %>
              </li>
            </ul>
          </div>
        </div>
      </div>  
      <% end %>
    </header>
    <%= yield %>
  </body>
</html>
