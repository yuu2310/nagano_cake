<%= render 'admin/nav' %>

<main>

  <div class="container">
    <div class="text-center">
      <div class="row">
        <div class="col-2 mt-4 bg-light">
          <h4>注文履歴一覧</h4>
        </div>               
          <table class="table mt-5">
          	<tr class="font-weight-bold bg-light text-dark">
          		<th>購入日時</th>
          		<th>購入者</th>
          		<th>注文個数</th>
          		<th>注文ステータス</th>
          	</tr>
          
          <% @orders.each do |order| %>
          	<tr>
          	  <td><%= link_to order[:created_at].strftime("%Y-%m-%d %H:%M"), admin_order_path(order.id) %></td>
          	  
          		<td><%= order.customer.full_name %></td>
          	
          		<td><%= order.count_amount %></td>
          		
          		<td><%= order.status_i18n %></td>
          	</tr>
          <% end %>
          </table>
           
      </div>
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-2 offset-5">
      <p><%= paginate @orders %></p>
    </div>
  </div>
  

</main>