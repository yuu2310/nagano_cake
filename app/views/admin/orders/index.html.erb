<%= render 'admin/nav' %>

<div class="container">
  <div class="row" style="width:100%; margin:0 auto;">
    <h4>注文履歴一覧</h4>
    
      <table class="table">
      	<tr class="font-weight-bold bg-light text-dark">
      		<th>購入日時</th>
      		<th>購入者</th>
      		<th>注文個数</th>
      		<th>注文ステータス</th>
      	</tr>
      
      <% @orders.each do |order| %>
      	<tr>
      	  <td><%= link_to order[:created_at].strftime("%Y-%m-%d %H:%M"), admin_order_path(order.id) %></td>
      		<td><%= order.customer.full_name %></td>
      	
      		<td><%= order.count_amount %></td>
      		
      		<td><%= order.status_i18n %></td>
      	</tr>
      <% end %>
      </table>
  </div>
</div>

<%= paginate @orders %>