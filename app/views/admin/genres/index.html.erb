<h1>ジャンル一覧・追加</h1>

<%= form_with model: @genre, url: admin_genres_path do |genre| %>

  <div class="from-group">
    <h5>ジャンル名</h5>
    <%= genre.text_field :name, class: "form-control genre_name" %>
  </div>
	
	<div class="from-group">
    <%= genre.submit '新規登録', class: "btn btn-success" %>
  </div>
<% end %>

<tbody>
  <h5>ジャンル</h5>
    <% @genres.each do |genre| %>
  <tr>
    
    <td>
      <%= genre.name %>
    </td>
    
    <td>
      <%= link_to "編集する", edit_admin_genre_path(genre.id) %>
    </td>
  
  </tr> 
    <% end %>
  
</tbody>
 