<%= render 'admin/nav' %>

<main>
  <div class="container">
    <div class="text-center">
      <div class="row">
        <div class="col-5 bg-light mt-5">
          <h2><%= @customer.first_name %><%= @customer.last_name %> 様の会員詳細</h2>
        </div>
      </div>
      
      <div class="row">
        <table class="table table-borderless mt-3">
          <tbody>
            <tr>
              <th scope="row">会員ID</th>
              <td><%= @customer.id %></td>
            </tr>
            <tr>
              <th scope="row">氏名</th>
              <td>
                <%= @customer.first_name %>
                <%= @customer.last_name %>
              </td>
            </tr>
            <tr>
              <th scope="row">フリガナ</th>
              <td> 
                <%= @customer.first_name_kana %>
                <%= @customer.last_name_kana %>
              </td>
            </tr>
            <tr>
              <th scope="row">郵便番号</th>
              <td><%= @customer.postal_code %></td>
            </tr>
            <tr>
              <th scope="row">住所</th>
              <td><%= @customer.address %></td>
            </tr>
            <tr>
              <th scope="row">電話番号</th>
              <td><%= @customer. telephone_number %></td>
            </tr>
            <tr>
              <th scope="row">メールアドレス</th>
              <td><%= @customer.email %></td>
            </tr>
            <tr>
              <th scope="row">会員ステータス</th>
              <td>
                <% if @customer.is_deleted %>
                  <%= '退会' %>
                <% else %>
                  <p class="text-success">
                  <%= '有効' %>
                  </p>
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
                    
                    
      <div class="row">
        <div class="col-12 mt-3">
          <%= link_to '編集する', edit_admin_customer_path(@customer.id), class: 'btn btn-success mr-3' %>
          <%= link_to '注文履歴一覧を見る', admin_orders_path, class: 'btn btn-primary' %>
        </div>
      </div>
      
    </div>
  </div>
</main>