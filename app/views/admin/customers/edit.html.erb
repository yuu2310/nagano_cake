<%= render 'admin/nav' %>
<h2><%= @customer.first_name %><%= @customer.last_name %>さんの会員情報編集</h2>

<%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch do |customer| %>

<h5>氏名</h5>
<%= customer.text_field :first_name %>
<%= customer.text_field :last_name %>

<h5>フリガナ</h5>
<%= customer.text_field :first_name_kana %>
<%= customer.text_field :last_name_kana %>


<h5>郵便番号</h5>
<%= customer.text_field :postal_code, maxlength: "7" %>


<h5>住所</h5>
<%= customer.text_field :address, size: '50' %>


<h5>電話番号</h5>
<%= customer.text_field :telephone_number %>

<h5>メールアドレス</h5>
<%= customer.text_field :email %>

<h5>会員ステータス</h5>
<%= customer.label :is_deleted, '有効' %>
<%= customer.radio_button :is_deleted, :true, checked: true %>
<%= customer.label :is_deleted, '退会' %>
<%= customer.radio_button :is_deleted, :false %>

<%= customer.submit '変更を保存' %>

<% end %>