<h1>会員一覧</h1>

  <table class="table">
      <thead>
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
          <th colspan="4"></th>
        </tr>
      </thead> 
                  
                  
      <tbody>
        <% @customers.each do |customer| %>
        <tr> 
          <td>
            <%= customer.id %>
          </td>  
          <td>
            <%= customer.name %>
          </td> 
          <td>
            <%= customer.email %>
          </td>
          <td>
            <%= customer.is_active %>
          </td>
        </tr>
        <% end %>
      </tbody>
  </table>